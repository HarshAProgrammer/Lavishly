<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diaBoxPersonage"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container_diaBoxPersonage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@color/black"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitlePersonageDialogue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:text="PersonageItemTitle"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescriptionPersonageDialogue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:text="PersonageItemDescription"
                    android:textColor="@color/md_white_1000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnPayPersonageDialogue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:background="@color/com_facebook_button_login_silver_background_color"
                    android:drawableLeft="@drawable/dialogue_item_money_black_24dp"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/dialogue_item_money_black_24dp"
                    android:padding="20dp"
                    android:text="Get It"
                    android:textAlignment="textStart" />

                <Button
                    android:id="@+id/btnFavouritePersonageDialogue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:background="@color/com_facebook_button_login_silver_background_color"
                    android:drawableLeft="@drawable/dialogue_item_favorite_black_24dp"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/dialogue_item_favorite_black_24dp"
                    android:padding="20dp"
                    android:text="Add To Favourites"
                    android:textAlignment="textStart" />


            </LinearLayout>

            <ImageView
                android:id="@+id/ivImagePersonageDialogue"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/personage_main" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>


</RelativeLayout>